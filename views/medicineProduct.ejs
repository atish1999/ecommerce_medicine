<%- include('partials/header'); %>
    <title><%= product[0]._name %></title>
<%- include('partials/userNavBar')%>
    
    <div class="container-fluid" style="padding: 3rem;">

        <div class="row">
            <div class="col-6" style="padding: 2rem;">
                <img src="/uploads/<%=product[0]._image%>" class="blogImg" alt="" style="max-width: 100%; max-height: 100%; display: block;">
            </div>
            <div class="col-6" style="padding: 3rem">
                <h1 style="font-size: 320%;"><%= product[0]._name %></h1>
                <h5>Expires on : <%= product[0]._expiry.toDateString() %></h5>
                <h3>Available Quantity : <%= product[0]._quantity %></h3>
                <h3>Price for Each Strip : <%= product[0]._mrp %></h3>
                <h3>Tablets Per Strip : <%= product[0]._tabletsperpiece %></h3>
                <h3>Manufactured By : <%= product[0]._manufacturer %></h3>
                <h3>Composition : </h3>
                <ul class="comp">
                    <% for( let index = 0; index < product[0]._composition.length; index++ ) { %>
                        <li><%= product[0]._composition[index] %></li>
                    <% } %>
                </ul>
                <div class="addCart" style="margin: 2rem 0rem;">
                    <form action="/user/addCart" method="post">
                            <button name="button" value="<%= product[0]._prid+"^"+user[0]._uid +"^"+ product[0]._image+"^"+product[0]._expiry +"^"+product[0]._name +"^"+product[0]._mrp+"^"+product[0]._manufacturer%>" onchange="this.form.submit()">Add To Cart</button>
                    </form>
                </div>
                <% if (message!=null) { %>
                <h2 class="error-message"><%= message %></h2>
                <% } %>
                <div class="buyMedicine" style="margin: 2rem 0rem">
                    <form action="/user/product/buy" method="get">
                        <h3>Enter Quantity of Medicine You Want to buy: (* Max 5)</h3>
                        <input name="quantity" type="number" min="1" max="5" style="width: 50%">
                        <button name="buyMedicine" value="<%= user[0]._uid+"^"+product[0]._prid+"^"+product[0]._oid %>" style="width: 20%">Buy</button>
                    </form>
                </div>
            </div>
        </div>
        <h2>How To Use : </h2>
        <p><%= product[0]._use %></p>

        <h2>Benefits : </h2>
        <p><%= product[0]._benefits %></p>
    </div>
<%- include('partials/footer'); %>