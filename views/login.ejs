<%- include('partials/header') %>
    <title>Login</title>
</head>
<body>
    <form method="post" action="/auth/login">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" name="email" class="form-control" id="email" placeholder="Enter Email" autocomplete="off">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" class="form-control" id="password" placeholder="Enter Password" autocomplete="off">
        </div>
        <div class="form-group">
            <label for="userType">What Do You Identify Yourself As:</label>
            <select class="form-control" name="role" id="userType">
              <option value="user">User</option>
              <option value="shopowner">Medicine Shop Owner</option>
              <option value="doctor">Doctor</option>
            </select>
          </div>
          <a href="/auth/options">Signup</a>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
      
<%- include('partials/footer') %>